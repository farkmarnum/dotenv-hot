{
  "name": "dotenv-hot",
  "version": "0.1.0",
  "author": "Mark Farnum",
  "description": "Dotenv that works with hot reloading",
  "keywords": [
    "dotenv",
    "hot",
    "hot-reloading",
    "hmr"
  ],
  "license": "MIT",
  "bin": "dist/source/cli.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc && chmod u+x dist/source/cli.js",
    "build:watch": "yarn build && tsc --watch",
    "pretest": "npm run build",
    "start": "npm run build && dist/source/cli.js",
    "test": "xo && ava",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "x": "dist/source/cli.js"
  },
  "files": [
    "dist/source/cli.js"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "ink": "^3.2.0",
    "ink-select-input": "^4.2.1",
    "ink-text-input": "^4.0.3",
    "meow": "^9.0.0",
    "react": "^18.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "ava": "^4.2.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "ink-testing-library": "^2.1.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4",
    "xo": "^0.39.1"
  },
  "ava": {
    "typescript": {
      "extensions": [
        "tsx"
      ],
      "rewritePaths": {
        "source/": "dist/"
      }
    }
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "react/prop-types": "off"
    }
  }
}
