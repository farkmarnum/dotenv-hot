{
  "name": "dotenv-hot",
  "version": "0.2.5",
  "description": "Dotenv that works with hot reloading",
  "license": "MIT",
  "engines": {
    "node": ">=14.16"
  },
  "env": {
    "node": true
  },
  "author": "Mark Farnum",
  "keywords": [
    "dotenv",
    "hot",
    "hot-reloading",
    "hmr"
  ],
  "bin": "dist/cli.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farkmarnum/dotenv-hot"
  },
  "scripts": {
    "typecheck": "tsc",
    "build": "babel src --out-dir dist --extensions \".ts,.tsx\" && chmod u+x dist/cli.js",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "prepublishOnly": "yarn clean && yarn lint && yarn test && yarn build",
    "start": "npm run build && dist/cli.js",
    "pretest": "npm run build",
    "test": "ava"
  },
  "ava": {
    "typescript": {
      "extensions": [
        "tsx"
      ],
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": false
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "ink": "^3.2.0",
    "ink-select-input": "^4.2.1",
    "ink-spinner": "^4.0.3",
    "ink-text-input": "^4.0.3",
    "meow": "^9.0.0",
    "react": "^18.1.0",
    "strip-comments": "^2.0.1"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.9",
    "@types/strip-comments": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "ava": "^4.2.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "ink-testing-library": "^2.1.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  }
}
